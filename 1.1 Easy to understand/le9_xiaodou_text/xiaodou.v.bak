module xiaodou(
	clk,rst_n
	key,led
);
//按键消抖
input clk;
input rst_n;
input key;

output led;

//开始时刻电平跳动
reg key1;
always@(posedge clk or negedge rst_n)begin
	if(!rst_n) key1 <= 1'b0;
	else key1 <= key;
end

reg key1_r;
always@(posedge clk or negedge rst_n)begin
	if(!rst_n) key1_r <= 1'b0;
	else key1_r <= key1;
end

reg key1_en;
assign key1_en = (~key1)&key_r;

//

endmodule